@model Membresia
@{
    ViewData["Title"] = "Editar Membresía";
}
<h1>@ViewData["Title"]</h1>

<form method="post">
    <div class="mb-3">
        <label>Tipo:</label>
        <input asp-for="nombreMembresia" class="form-control" placeholder="Ingrese el tipo">
    </div>
    <div class="mb-3">
        <label>Duración:</label>
        <input asp-for="duracionMembresia" class="form-control" placeholder="Ingrese la duración">
    </div>
    <div class="mb-3">
        <label>Precio:</label>
        <input asp-for="precioMembresia" class="form-control" placeholder="Ingrese el precio">
    </div>
    
    <div class="row col-6">
        <div class="col-6 col-md-6">
            <button type="submit" class="btn btn-primary">Guardar</button>
        </div>
        <div class="col-6 col-md-6">
            <a asp-action="Index" class="btn btn-outline-secondary">Regresar</a>
        </div>
    </div>
</form>

<p>Esta es la vista para editar membresías</p>