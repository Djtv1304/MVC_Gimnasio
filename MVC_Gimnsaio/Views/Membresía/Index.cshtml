@model List<MVC_Gimnsaio.Models.Membresia>
@{
    ViewData["Title"] = "Lista de Membresías";
}

<h1>@ViewData["Title"]</h1>

<button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Create", "Membresía")'">Nueva Membresía</button>

<table class="table table-hover">
    <thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Tipo:</th>
        <th scope="col">Duración:</th>
        <th scope="col">Precio:</th>
    </tr>
    </thead>
    
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <th scope="row">@item.idMembresia</th>
            <td>@item.nombreMembresia</td>
            <td>@item.duracionMembresia</td>
            <td>@item.precioMembresia</td>
            <td>
                <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                    <a asp-action="VerDetalleMembresia" asp-route-idMembresia="@item.idMembresia" class="btn btn-danger">Ver detalles <i class="bi bi-eye"></i></a>
                    <a asp-action="Edit" asp-route-idMembresia="@item.idMembresia" class="btn btn-danger">Editar <i class="bi bi-pencil-square"></i></a>
                    <a asp-action="Delete" asp-route-idMembresia="@item.idMembresia" class="btn btn-warning">Borrar <i class="bi bi-trash-fill"></i></a>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>


<p>Esta es la vista de la lista de productos</p>