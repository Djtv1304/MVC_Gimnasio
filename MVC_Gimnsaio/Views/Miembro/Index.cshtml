@model List<MVC_Gimnsaio.Models.Miembro>

@{
    ViewData["Title"] = "Lista de Miembros";
}

<h1>@ViewData["Title"]</h1>

<button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Create", "Miembro")'">Nuevo Miembro</button>


<table class="table table-hover">
    <thead>
    <tr>
        <th scope="col">ID</th>
        <th scope="col">Nombres:</th>
        <th scope="col">Correo electrónico:</th>
            <th scope="col">Opciones</th>
    </tr>
    </thead>
    
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <th scope="row">@item.idMiembro</th>
            <td>@item.nombreMiembro @item.apellidoMiembro</td>
            <td>@item.emailMiembro</td>
            <td>
                <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                    @*Ver, editar, borrar, adminstrarMembresía*@
                    <a asp-action="VerDetalleMiembro" asp-route-idMiembro="@item.idMiembro" class="btn btn-danger">Detalles <i class="bi bi-eye"></i></a>
                    <a asp-action="Editar" asp-route-idMiembro="@item.idMiembro" class="btn btn-danger">Editar <i class="bi bi-pencil-square"></i></a>
                    <a asp-action="Delete" asp-route-idMiembro="@item.idMiembro" class="btn btn-warning">Eliminar <i class="bi bi-trash-fill"></i></a>
                    <a asp-action="AdministrarMembresia" asp-route-idMiembro="@item.idMiembro" class="btn btn-info">Ver Membresia <i class="bi bi-nut-fill"></i></a>
                    <a asp-action="VerPagosPorMiembro" asp-route-idMiembro="@item.idMiembro" class="btn btn-info">Ver Pagos <i class="bi bi-cash-coin"></i></a>
                </div>

            </td>
        </tr>
    }
    </tbody>
</table>


<p>Esta es la vista de la lista de miembros</p>