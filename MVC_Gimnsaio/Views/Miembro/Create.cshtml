@model Miembro
@{
    ViewData["Title"] = "Crear Miembro";
}
<h1>@ViewData["Title"]</h1>

<form method="post">
    <div class="mb-3">
        <label>Nombre:</label>
        <input asp-for="nombreMiembro" class="form-control" placeholder="Ingrese el nombre">
    </div>
    <div class="mb-3">
        <label>Apellido:</label>
        <input asp-for="apellidoMiembro" class="form-control" placeholder="Ingrese el apellido">
    </div>
    <div class="mb-3">
        <label>E-mail:</label>
        <input asp-for="emailMiembro" class="form-control" placeholder="Ingrese el email">
    </div>
    
    <div class="mb-3">
        <label>Fecha inscripción:</label>
        <input asp-for="fechaInscripcion" type="date" class="form-control" placeholder="Ingrese la fecha">
    </div>

    <div class="mb-3">
        <label>Contraseña:</label>
        <input asp-for="passwordMiembro" type="password" class="form-control" placeholder="Ingrese la contraseña para el miembro">
    </div>

    <div class="row col-6">
        <div class="col-6 col-md-6">
            <button type="submit" class="btn btn-primary">Crear</button>
        </div>
        <div class="col-6 col-md-6">
            <a asp-action="Index" class="btn btn-outline-secondary">Regresar</a>
        </div>
    </div>
</form>

<p>Esta es la vista para crear miembros</p>