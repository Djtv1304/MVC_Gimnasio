@model Miembro
@{
    ViewData["Title"] = "Editar Miembros";
}
<h1>@ViewData["Title"]</h1>

<form method="post">
    <div class="mb-3">
        <label>Nombre:</label>
        <input asp-for="nombreMiembro" class="form-control" placeholder="Ingrese el nuevo nombre">
    </div>
    <div class="mb-3">
        <label>Apellido:</label>
        <input asp-for="apellidoMiembro" class="form-control" placeholder="Ingrese el nuevo apellido">
    </div>
    <div class="mb-3">
        <label>E-mail:</label>
        <input asp-for="emailMiembro" class="form-control" placeholder="Ingrese el nuevo correo">
    </div>

    <div class="mb-3">
        <label>Fecha inscripción:</label>
        <input asp-for="fechaInscripcion" type="date" class="form-control" placeholder="Ingrese la nueva fecha">
    </div>

    <div class="mb-3">
        <label>Membresia:</label>
        <select asp-for="idMembresia" asp-items="ViewBag.Membresia" class="form-control">
            <option value="ViewBag.Membresia.idMembresia">Selecciona una membresía</option>
        </select>
    </div>

    <div class="row col-6">
        <div class="col-6 col-md-6">
            <button type="submit" class="btn btn-primary">Guardar</button>
        </div>
        <div class="col-6 col-md-6">
            <a asp-action="Index" class="btn btn-outline-secondary">Regresar</a>
        </div>
    </div>
</form>

<p>Esta es la vista para editar miembros</p>