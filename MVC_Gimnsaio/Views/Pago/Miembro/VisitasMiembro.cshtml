@model List<MVC_Gimnsaio.Models.Visita>

@{
    ViewData["Title"] = "Lista de Visitas de un miembro";
}

<h1>@ViewData["Title"]</h1>


<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Fecha:</th>
            <th scope="col">Id del miembro:</th>
            <th scope="col">Miembro</th>
            <th scope="col">Descripción:</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.idVisita</th>
                <td>@item.fechaVisita</td>
                <td>@item.miembroId</td>
                <th>@ViewBag.Miembro.nombreMiembro @ViewBag.Miembro.apellidoMiembro</th>
                <td>@item.descripcionVisita</td>
            </tr>
        }
    </tbody>
</table>


<p>Esta es la vista de la lista de visitas de un miembro</p>