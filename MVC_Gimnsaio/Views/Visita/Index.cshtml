@model List<MVC_Gimnsaio.Models.Visita>

@{
    ViewData["Title"] = "Lista de Visitas";
}

<h1>@ViewData["Title"]</h1>

<button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Create", "Visita")'">Nuevo visita</button>


<table class="table table-hover">
    <thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Fecha:</th>
        <th scope="col">Id(miembro):</th>
        <th scope="col">Descripci√≥n:</th>        
    </tr>
    </thead>
    
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <th scope="row">@item.idVisita</th>
            <td>@item.fechaVisita</td>
            <td>@item.miembroId</td>
            <td>@item.descripcionVisita</td>
            <td>
                <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                    @*Ver, editar, borrar*@
                    <a asp-action="VerDetalleVisita" asp-route-idVisita="@item.idVisita" class="btn btn-danger"><i class="bi bi-eye"></i></a>
                    <a asp-action="Editar" asp-route-idVisita="@item.idVisita" class="btn btn-danger"><i class="bi bi-pencil-square"></i></a>
                    <a asp-action="Delete" asp-route-idVisita="@item.idVisita" class="btn btn-warning"><i class="bi bi-trash-fill"></i></a>
                    <a asp-action="VisitasMiembro" asp-route-idVisita="@item.idVisita" class="btn btn-warning"><i class="bi bi-file-earmark-person-fill"></i></a>
                </div>

            </td>
        </tr>
    }
    </tbody>
</table>


<p>Esta es la vista de la lista de visitas</p>7