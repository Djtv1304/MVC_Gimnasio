@model Visita
@{
    ViewData["Title"] = "Crear Visita";
}
<h1>@ViewData["Title"]</h1>

<form method="post">
    <div class="mb-3">
        <label>Fecha visita:</label>
        <input asp-for="fechaVisita" type="date" class="form-control" placeholder="Ingrese la fecha">
    </div>
        <div class="mb-3">
            <label>Miembro:</label>
            @if(ViewBag.Miembros != null)
            {

                <select asp-for="miembroId" asp-items="ViewBag.Miembros" class="form-control">
                    <option value="" selected>Selecciona el miembro de la visita</option>
                </select>

            }
        </div>
    <div class="mb-3">
        <label>Descripción de la visita:</label>
        <input asp-for="descripcionVisita" class="form-control" placeholder="Ingrese la descripción">
    </div>
    
    <div class="row col-6">
        <div class="col-6 col-md-6">
            <button type="submit" class="btn btn-primary">Crear</button>
        </div>
        <div class="col-6 col-md-6">
            <a asp-action="Index" class="btn btn-outline-secondary">Regresar</a>
        </div>
    </div>
</form>

<p>Esta es la vista para crear visitas</p>